@inherits LayoutComponentBase

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    html, body { height: 100%; font-family: Sans-Serif; font-size: 12px; line-height: 2.0em; }
    .content { flex: 1; }
    .custom-header { background-color: #0f2f54; height: 140px; }
    .logo { width: 175px; height: 120px; object-fit: contain; }
    .header-title { color: white; font-size: 24px; font-weight: bold; }
    .custom-footer { background-color: #e3effc; color: rgb(149,149,149); height: 120px; font-size: 12px; line-height: 2.0em; }
    .text-orange { color: orange !important; }
    .footer-links { color: #0f2f54 !important; text-decoration: none; font-size: 12px; }
    .footer-links:hover { text-decoration: underline; }
    .copyright-text { color: rgb(149,149,149); font-size: 12px; margin-right: 5px; }
</style>

<TelerikRootComponent>
    <div class="d-flex flex-column min-vh-100">
        <header class="custom-header d-flex align-items-center px-3">
            <div class="container d-flex justify-content-between align-items-center">
                <img src="logo.svg" alt="Company Logo" class="logo">
                <h1 class="header-title m-0">Website Title</h1>
            </div>
        </header>
        <div class="content container mt-5">
            <main>
                @Body
            </main>
        </div>
        <footer class="custom-footer py-3 mt-auto">
            <div class="container">
                <div class="row d-flex align-items-center">
                    <div class="col-md-6 col-12 d-flex flex-column align-items-md-start align-items-center text-md-start text-center">
                        <small class="fw-bold">Company Name</small>
                        <div class="d-flex align-items-center mt-2">
                            <i class="fa fa-map-pin text-orange fs-5 me-2"></i>
                            <small>123 Main Street, City, State, ZIP</small>
                        </div>
                        <div class="d-flex align-items-center mt-2">
                            <i class="fa fa-phone text-orange fs-5 me-2"></i>
                            <small>+1 (234) 567-890</small>
                        </div>
                    </div>
                    <div class="col-md-6 col-12 d-flex justify-content-md-end justify-content-center text-md-end text-center mt-3 mt-md-0">
                        <span class="copyright-text">© Copyright</span>
                        <a href="https://parentcompany.com" class="footer-links mx-2">Parent Company</a> |
                        <a href="/security" class="footer-links mx-2">Security Statement</a> |
                        <a href="/privacy" class="footer-links mx-2">Privacy Policy</a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
</TelerikRootComponent>